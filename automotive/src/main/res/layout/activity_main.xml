<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan Speed: 0"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:padding="16dp"/>

    <Button
        android:id="@+id/buttonIncreaseSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Increase Speed"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonDecreaseSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrease Speed"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonTurnOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Fan On"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonTurnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Fan Off"
        android:layout_marginTop="16dp"/>

</LinearLayout>
